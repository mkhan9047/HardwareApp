<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:orientation="vertical"
    tools:context="app.device.com.hardwareapp.Fragment.AddDevices">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="90dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_margin="4dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:text="Add Devices"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


<android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:hint="Device Name"
    android:layout_height="wrap_content">
    <EditText
        android:drawableStart="@drawable/ic_devices_black_24dp"
        android:drawablePadding="8dp"
        android:singleLine="true"
        android:inputType="text"
        android:id="@+id/add_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="+880"
        android:layout_height="wrap_content">

        <EditText
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:id="@+id/add_device_phone_number"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
    android:layout_marginStart="50dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="50dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/add_device_btn"
    android:textColor="@color/colorWhite"
    android:text="Done"
    android:background="@color/colorAccent"
    />
</LinearLayout>
